{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "ECR_URI": "{{ env `ECR_URI`}}",
    "ECR_LOGIN_SERVER": "{{env `ECR_LOGIN_SERVER`}}"
  },
  "builders": [{
    "name": "docker-jockey",
    "type": "docker",
    "image": "ubuntu",
    "commit": true,
    "ecr_login": true,
    "login_server": "{{user `ECR_LOGIN_SERVER`}}"
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "AWS_DEFAULT_REGION=us-west-2",
      "ECR_URI={{user `ECR_URI`}}",
      "ECR_LOGIN_SERVER={{user `ECR_LOGIN_SERVER`}}",
      "AWS_ACCESS_KEY={{user `aws_access_key`}}",
      "AWS_SECRET_KEY={{user `aws_secret_key`}}"
    ],
    "script": "scripts/provision-docker.sh"
    }],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `ECR_URI`}}",
        "tag": "testing-image-tags"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "aws_access_key": "{{user `aws_access_key`}}",
        "aws_secret_key": "{{user `aws_secret_key`}}",
        "login_server": "{{user `ECR_LOGIN_SERVER`}}"
      }
    ]
  ]
}